{
    "compilerOptions": {
		  "jsx": "react", 
		  "module": "commonjs",
		  "noImplicitAny": true,
		  "removeComments": true,
		  "preserveConstEnums": true,
		"outDir": "./dist/",
		"stripInternal": true,
		"target": "es6",
		"sourceMap": true, 
		"allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
	]
}